msgid ""
"f_c (R_{ij}) = \\begin{cases}\n"
"\\frac{1}{2} \\left( 1 + \\cos\\left(\\frac{\\pi "
"R_{ij}}{R_{\\text{cut}}}\\right) \\right), & \\text{for} R_{ij} < "
"R_{\\text{cut}} \\\\\n"
"0, & \\text{for} R_{ij} \\geq R_{\\text{cut}} \\\\\n"
"\\end{cases}\n"
"\n"
msgstr ""
"f_c (R_{ij}) = \\begin{cases}\n"
"\\frac{1}{2} \\left( 1 + \\cos\\left(\\frac{\\pi "
"R_{ij}}{R_{\\text{cut}}}\\right) \\right), & \\text{for} R_{ij} < "
"R_{\\text{cut}} \\\\\n"
"0, & \\text{for} R_{ij} \\geq R_{\\text{cut}} \\\\\n"
"\\end{cases}\n"
"\n"

